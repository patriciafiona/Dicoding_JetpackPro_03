<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.path_studio.moviecatalogue" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieCatalogue" >
        <activity
            android:name=".ui.TmdbApp"
            android:exported="true"
            android:label="@string/title_activity_tmdb_app"
            android:theme="@style/Theme.MovieCatalogue" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.search.SearchActivity" />
        <activity android:name=".ui.detailTvShow.DetailTvShowActivity" />
        <activity android:name=".ui.detailMovie.DetailMovieActivity" />
        <activity android:name=".ui.mainPage.MainActivity" />
        <activity
            android:name=".ui.splash.SplashActivity"
            android:exported="false"
            android:theme="@style/SplashTheme" >
        </activity>
    </application>

</manifest>